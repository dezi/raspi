######################################################################
#
# Build section.
#

all: ./local ./download
	cd ./local; make work

work: tools helpers codecs utilities

tools: gmp yasm cmake gperf expat zlib bzip2 nettle gnutls

helpers: sdl alsa freetype fontconfig libcddb libdvdcss fribidi # rtmpdump

codecs: \
	libcdio libgsm libmad libass xvidcore \
	libogg libvorbis libtheora libbluray libvpx \
	libaacplus libcaca \
	x264 \
	#xavs utvideo opus openjpeg speex \
	lame faac faad2 opencore-amr orc schroedinger \
	frei0r fdk-aac vo-amrwbenc vo-aacenc \

utilities: cd-discid libcdio-paranoia mp4v2 # gpac abcde atomicparsley

#####################################################################
#
# Local setup
#

./local:
	mkdir ./local
	ln -s ../Makefile.local ./local/Makefile

./download:
	mkdir ./download

#####################################################################
#
# gmp => nettle
#

$(gmp): 
	wget ftp://ftp.gnu.org/gnu/gmp/$(gmp).tar.bz2
	tar -xvjf $(gmp).tar.bz2
	mv $(gmp).tar.bz2 ../download

$(gmp)/dezi.done:
	cd $(gmp); \
	./configure; \
	make; \
	sudo make install; \
	touch dezi.done

gmp: $(gmp) $(gmp)/dezi.done

