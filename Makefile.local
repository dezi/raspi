	tar -xvJf $(gnutls).tar.xz
	mv -f $(gnutls).tar.xz ../download

$(gnutls)/dezi.done:
	cd $(gnutls); \
	sed -i "s/^void \*_gnutls_file_mutex;/void *_gnutls_file_mutex = 0;/" lib/verify-tofu.c; \
	./configure --enable-static --enable-shared; \
	make; \
	sudo make install; \
	touch dezi.done

gnutls: $(gnutls) $(gnutls)/dezi.done

