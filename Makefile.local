	tar -xvjf $(alsa).tar.bz2 
	mv -f $(alsa).tar.bz2 ../download

$(alsa)/dezi.done:
	cd $(alsa); \
	./configure --prefix=/usr/local --enable-static=yes --enable-shared=no; \
